@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıkllar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <th><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></th>
            <th><a href="/AdminCategory/EditCategory/@item.CategoryId" class="btn btn-outline-info">Güncelle</a></th>
            <th><a href="#" class="btn btn-outline-primary">Başlıklar</a></th>
        </tr>
    }
    <br />
</table>
<a href="/AdminCategory/AddCategory " class="btn btn-dark">Yeni Kategory</a>

